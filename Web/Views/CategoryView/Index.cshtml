@model IEnumerable<Models.Entities.Category>

@{
    ViewData["Title"] = "Category List";
    Layout = "../Shared/_Layout";
}

<div class="container py-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-semibold">
            <i class="bi bi-list-ul me-2"></i> Category List
        </h2>
        <a asp-action="Create" asp-controller="CategoryView" class="btn btn-primary btn-lg shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> Create New Category
        </a>
    </div>

    <!-- Card Table -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light text-center">
                        <tr>
                            <th scope="col"><i class="bi bi-tag-fill me-1"></i> Name</th>
                            <th scope="col"><i class="bi bi-list-ol me-1"></i> Order</th>
                            <th scope="col"><i class="bi bi-check2-circle me-1"></i> Active</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr class="text-center">
                                <td colspan="3" class="text-muted py-4">
                                    <i class="bi bi-info-circle me-2"></i> No categories found.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr class="text-center">
                                    <td class="text-start fw-medium">@item.catName</td>
                                    <td>@item.catOrder</td>
                                    <td>
                                        @if (!item.markedAsDeleted)
                                        {
                                            <span class="badge bg-success rounded-pill px-3 py-2">
                                                <i class="bi bi-check-circle me-1"></i> Yes
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger rounded-pill px-3 py-2">
                                                <i class="bi bi-x-circle me-1"></i> No
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
