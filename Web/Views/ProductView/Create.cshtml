@model Models.Entities.Product
@{
    ViewData["Title"] = "Create Product";
    Layout = "../Shared/_Layout";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary fw-bold mb-1">
                <i class="bi bi-plus-circle me-2"></i> Create New Category
            </h2>
            <p class="text-muted">Fill in the form below to add a new category.</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg shadow-sm">
            <i class="bi bi-arrow-left me-1"></i> Back to List
        </a>
    </div>

    <div class="card shadow-sm border-0 animate__animated animate__fadeIn">
        <div class="card-body p-5">
            <form asp-action="Create" method="post" novalidate>

                <div class="mb-4">
                    <label asp-for="Title" class="form-label text-dark fw-semibold">Category Name</label>
                    <input asp-for="Title" class="form-control form-control-lg shadow-sm" placeholder="e.g. Electronics" autofocus />
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Description" class="form-label text-dark fw-semibold">Category Name</label>
                    <input asp-for="Description" class="form-control form-control-lg shadow-sm" placeholder="e.g. Electronics" autofocus />
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Author" class="form-label text-dark fw-semibold">Category Name</label>
                    <input asp-for="Author" class="form-control form-control-lg shadow-sm" placeholder="e.g. Electronics" autofocus />
                    <span asp-validation-for="Author" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Price" class="form-label text-dark fw-semibold">Category Name</label>
                    <input asp-for="Price" class="form-control form-control-lg shadow-sm" placeholder="e.g. Electronics" autofocus />
                    <span asp-validation-for="Price" class="text-danger small"></span>
                </div>

                <div class="d-flex gap-3">
                    <button type="submit" class="btn btn-primary btn-lg shadow-sm px-4">
                        <i class="bi bi-check-circle me-1"></i> Create
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg shadow-sm px-4">
                        <i class="bi bi-x-circle me-1"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
            <partial name="_ValidationScriptsPartial" />
}
